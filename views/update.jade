html
	head
		title Foundry-Matrix Blog
		link(rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.2/css/bootstrap.min.css")
		link(rel="stylesheet" href="/styling/main.css")
	body
		div(class="header col-md-12")
			include ./header
		div(class="form col-md-6 col-centered")
			form(action="/&path=/save&blogid=" + posts[0].id, method="post")
				h3 Title
				input(type="text", value=posts[0].title, name='title',rows="2",cols="10")
				h3 Content
				textarea(name="text", rows="10", cols="60") #{posts[0].text}
				input(type="submit", value="Update blog")