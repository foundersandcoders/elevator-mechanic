each blogpost in posts
	div(class="indivpost")
		a(href="&path=/update&blogid="+blogpost.id)
			button(type="button" class="edit glyphicon glyphicon-pencil")
		a(href="&path=/delete&blogid="+blogpost.id)
			button(type="button" class="delete glyphicon glyphicon-remove")
		div(class="img")
			img(src=blogpost.image)
		div(class="blogtext")
			a(href="&path=/blogposts&blogid=" + blogpost.id)
				h2 #{blogpost.title}
			p #{blogpost.date.toDateString()}
			p #{blogpost.text}